<%= render "shared/dashboard" %>

<div style="margin-left:25%; margin-right: 6%; padding:86px 28px; height:1000px;">
  <div class ="view title d-flex w-100 justify-content-center">
    <h2>PROJECTS</h2>
  </div>
  <div class="team-cards-container d-flex w-100">
    <% @user.projects.each do |project| %>
      <%= link_to "/users/#{@user.id}/teams/#{project.team_id}/projects/#{project.id}" do %>
        <div class="card-team">
          <h3 class="project-name"><%= project.project_name.upcase %></h3>
          <p class="description justify-content-between"><%= project.description %></p>
          <div class="d-flex justify-content-around">
            <div class="doc-names d-inline-block w-49 p-3 text-left">
              <% project.users.each do |user| %>
                <p class="username"><%= user.user_name %></p>
              <% end %>
            </div>
              <div>
                <%= link_to "/users/#{@user.id}/teams/#{project.team_id}/projects/#{project.id}", title: "delete project", method: :delete, data: { confirm: "You are about to delete #{project.project_name}. Are you sure?" } do %>
                  <% render "shared/deleteButton" %>
                <% end %>
              </div>
              <div>
              <%= link_to "/users/#{@user.id}/teams/#{project.team_id}/projects/#{project.id}/assignments/new", title: "edit project" do %>
                <% render "shared/editButton" %>
              <% end %>
            </div>
            <div class="team-info d-inline-block w-49 p-3 text-left">
              <p class="recent" style="padding-left: 80px;">Documents</p>
              <% if project.documents.empty? %>
                <p class="doc-names justify-content-between" style="padding-left: 80px;">no documents</p>
              <% else %>
                <div class="scroll">
                  <% project.documents.each do |document| %>
                    <p class="doc-names justify-content-between" style="padding-left: 80px;"><%= document.doc_file_name.truncate(14) %></p>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div>
  <%= link_to "/users/#{@user.id}/projects/new" do %>
    <% render "shared/newButton" %>
    <% end %>
  </div>
</div>
