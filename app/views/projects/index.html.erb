<%= render "shared/dashboard" %>

<div style="margin-left:25%; margin-right: 6%; padding:86px 28px; height:1000px;">
  <div class ="view title d-flex w-100 justify-content-center">
    <h2>PROJECTS</h2>
  </div>
  <div class="team-cards-container d-flex w-100">
    <% @user.projects.each do |project| %>
      <%= link_to "/users/#{@user.id}/teams/#{project.team_id}/projects/#{project.id}" do %>
        <div class="card-team">
          <h3 class="project-name"><%= project.project_name.upcase %></h3>
          <p class="description"><%= project.description %></p>
          <% project.users.each do |user| %>
          <p class="username"><%= user.user_name %></p>
          <% end %>
        </div>
      <% end %>  
    <% end %>
  </div>

  <div>
  <%= link_to "/users/#{@user.id}/projects/new" do %>
    <% render "shared/newButton" %>
    <% end %>
  </div>
</div>
