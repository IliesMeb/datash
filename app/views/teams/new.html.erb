<%= render "shared/dashboard" %>

<div style="margin-left:25%;padding:86px 28px;height:1000px;">
  <h2>CREATE NEW Team</h2>
    <%= form_for([@user, @team]) do |f| %>
      <%= f.label :team_name, "Choose your Team Name:" %>
      <%= f.text_field :team_name %>
      <br>
      <%= f.label :description, "Description of your Team:" %>
      <%= f.text_area :description %>
      <br>
      <%= f.label :avatar_url, "Choose your Team-Avatar:" %>
      <%= f.url_field :avatar_url %>
      <br>
      <%= f.submit %>
    <% end %>
</div>
