<div style="height:max;">
  <div style="team-cards-container">
    <%= render "shared/dashboard" %>
    <div class ="view title d-flex w-100 justify-content-center">
      <h2 class="header"><%= @team.team_name %></h2>
      <br>
      <%= link_to "/users/#{@user.id}/teams/#{@team.id}", method: :delete, data: { confirm: "You are about to delete #{@team.team_name}. Are you sure?" }  do %>
        <% render "shared/deleteButton" %>
      <% end %>
    </div>
    <br>
    <br>
    <div class="user-list-container">
      <h3>Teammembers</h3>
    </div>
      <div class="user-list">
        <% @team.users.each do |user| %>
          <ol><p><%= user.user_name %></p></ol>   
        <% end %>
      </div>
      <div>
        <%= link_to "/users/#{@user.id}/teams/#{@team.id}/linkedconnections/new" do %>
          <% render "shared/editButton" %>
        <% end %>
      </div>
    <% @user.projects.each do |project| %>
      <%= link_to "/users/#{@user.id}/teams/#{@team.id}/projects/#{project.id}" do %>
        <% if @team.id == project.team_id %>  
          <div class="team-cards-container d-flex w-100 mt-4">
            <div class="card-team">
              <h3 class="project-name justify-content-between"><%= project.project_name%></h3>
              <div>
                <%= link_to "/users/#{@user.id}/teams/#{project.team_id}/projects/#{project.id}", method: :delete, data: { confirm: "You are about to delete #{project.project_name}. Are you sure?" }  do %>
                  <% render "shared/deleteButton" %>
                <% end %>
              </div> 
              <div class="d-flex justify-content-around">
                <div class="team-info d-inline-block w-49 p-3 text-left">
                  <p class="team-show-info"><%= project.description %></p>
                </div>
                <div class="doc-names d-inline-block w-49 p-3 text-left">
                  <% project.documents.each do |document| %>
                    <p class="team-show-doc-names"><%= document.file_name.last(3) %></p>
                  <% end %>
                </div>
              </div>
              <div>
                <%= link_to "/users/#{@user.id}/teams/#{project.team_id}/projects/#{project.id}/assignments/new" do %>
                  <% render "shared/editButton" %>
                <% end %>
              </div> 
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  
  <div>
  <%= link_to "/users/#{@user.id}/teams/#{@team.id}/projects/new" do %>
    <% render "shared/newButton" %>
    <% end %>
  </div>
</div>
