<%= render "shared/dashboard" %>
<div style="margin-left:25%; padding:86px 28px; height:1000px;">
  <div class ="view title d-flex w-100 justify-content-center">
    <h2>TEAMS</h2>
  </div>
  <div class="team-cards-container d-flex w-50">
    <% @user.teams.each do |team| %>
      <div class="card-team">
        <div style="background-image: url('<%= team.avatar_url %>'); height: 100px; width: 100px; background-size: cover; border-radius: 50%; border: black 3px solid; margin: auto">
        </div>
        <h3><%= team.team_name %></h3>
        <p><%= team.description %></p>
      </div>
    <% end %>
  </div>
</div>
