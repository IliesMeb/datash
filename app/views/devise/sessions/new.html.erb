<div class="sign-in-box w-50 mx-auto">
  <h2>Log in</h2>
  <div class="edit-user-container mt-4 mb-5" style="color: #ffffff; background: #30363D; border: 1px solid rgba(48, 54, 61, 0.5); box-sizing: border-box;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-12">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fa fa-envelope"></i><p>datash@supercool.com</p></a>
  </div>
  <div class="footer-copyright">
    <p>All rights reserved by Datash GmbH</p>
  </div>
</div>
